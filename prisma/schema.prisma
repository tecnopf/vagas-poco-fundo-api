generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Token {
  id    Int    @id @default(autoincrement())
  value String @unique

  @@map("tokens")
}

model Establishment {
  id           Int       @id @default(autoincrement())
  name         String
  cnpj         String    @unique
  email        String    @unique
  password     String
  createTime   DateTime  @default(now()) @map("create_time")
  socialLinks  Json?     @map("social_links")
  jobs         Job[]     @relation("EstablishmentJobs")
  applications Application[]
  notifications Notification[]

  @@map("establishments")
}

model Job {
  id                 Int           @id @default(autoincrement())
  title              String
  description        String?       
  status             String        @default("opened")
  totalVacancies     Int           @map("total_vacancies")
  remainingVacancies Int           @map("remaining_vacancies")
  expiration         DateTime? 
  educationLevel     String        @map("education_level")
  workingHoursPerDay Int           @map("working_hours_per_day")
  createdDate        DateTime      @default(now()) @map("created_date")
  link               String? 
  establishmentId    Int           @map("establishment_id")
  establishment      Establishment @relation("EstablishmentJobs", fields: [establishmentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  applications       Application[]

  @@map("jobs") 
}

model User {
  id        Int           @id @default(autoincrement())
  name      String
  cpf       String        @unique
  email     String        @unique
  password  String
  birthDate DateTime      @map("birth_date")

  applications Application[]
  notifications Notification[]

  @@map("users")
}


enum ApplicationStatus {
  pending
  approved
  disapproved
}

model Application {
  id                 Int               @id @default(autoincrement())

  userId             Int               @map("user_id")
  establishmentId    Int               @map("establishment_id")
  jobId              Int               @map("job_id")

  resumeUrl          String?            @map("resume_url")

  status             ApplicationStatus @default(pending)

  interviewAddress   String?            @map("interview_address")
  interviewPhone     String?            @map("interview_phone")
  interviewEmail     String?            @map("interview_email")
  interviewDateTime  DateTime?          @map("interview_datetime")

  createdAt          DateTime           @default(now()) @map("created_at")

  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  establishment      Establishment      @relation(fields: [establishmentId], references: [id], onDelete: Cascade)
  job                Job                @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([establishmentId])
  @@index([jobId])
  @@map("applications")
}


enum NotificationType {
  application_created
  application_approved
  application_disapproved
}

model Notification {
  id               Int               @id @default(autoincrement())

  userId           Int?              @map("user_id")
  establishmentId  Int?              @map("establishment_id")

  type             NotificationType
  payload          Json

  readAt           DateTime?          @map("read_at")
  createdAt        DateTime           @default(now()) @map("created_at")

  user             User?              @relation(fields: [userId], references: [id], onDelete: Cascade)
  establishment    Establishment?     @relation(fields: [establishmentId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([establishmentId])
  @@index([type])
  @@map("notifications")
}

