generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Token {
  id    Int    @id @default(autoincrement())
  value String @unique

  @@map("tokens")
}

model Establishment {
  id          Int      @id @default(autoincrement())
  name        String
  cnpj        String   @unique
  email       String   @unique
  password    String
  createTime  DateTime @default(now()) @map("create_time")
  socialLinks Json?    @map("social_links")
  jobs        Job[]    @relation("EstablishmentJobs") // ðŸ‘ˆ nome da relaÃ§Ã£o

  @@map("establishments")
}

model Job {
  id                 Int           @id @default(autoincrement())
  title              String
  description        String
  status             String        @default("opened")
  totalVacancies     Int
  remainingVacancies Int
  expiration         DateTime?
  educationLevel     String
  workingHoursPerDay Int
  createdDate        DateTime      @default(now())
  link               String?
  establishmentId    Int
  establishment      Establishment @relation("EstablishmentJobs", fields: [establishmentId], references: [id]) // ðŸ‘ˆ mesmo nome

  @@map("jobs")
}
